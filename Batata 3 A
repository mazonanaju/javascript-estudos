  <body>
    <div class="container">
      <h1>Análise de Números</h1>
      <p class="description">
        Digite três números para encontrar o maior, o menor e calcular a média:
      </p>

      <div class="input-group">
        <label for="numero1">Primeiro número:</label>
        <input
          type="number"
          id="numero1"
          placeholder="Digite o primeiro número"
        />
      </div>

      <div class="input-group">
        <label for="numero2">Segundo número:</label>
        <input
          type="number"
          id="numero2"
          placeholder="Digite o segundo número"
        />
      </div>

      <div class="input-group">
        <label for="numero3">Terceiro número:</label>
        <input
          type="number"
          id="numero3"
          placeholder="Digite o terceiro número"
        />
      </div>

      <button onclick="calcular()">Calcular</button>

      <div id="resultado" class="resultado">
        <h3>Resultados:</h3>
        <p>Maior número: <span id="maior">-</span></p>
        <p>Menor número: <span id="menor">-</span></p>
        <p>Média: <span id="media">-</span></p>
      </div>

      <div class="footer">
        <p>Programação de Aplicativos - Avaliação I</p>
      </div>
    </div>

    <script>
      function calcular() {
        // Obter os valores dos inputs
        const num1 = parseFloat(document.getElementById("numero1").value);
        const num2 = parseFloat(document.getElementById("numero2").value);
        const num3 = parseFloat(document.getElementById("numero3").value);

        // Validar se todos os campos foram preenchidos
        if (isNaN(num1) || isNaN(num2) || isNaN(num3)) {
          alert("Por favor, preencha todos os campos com números válidos.");
          return;
        }

        // Encontrar o maior número
        const maior = Math.max(num1, num2, num3);

        // Encontrar o menor número
        const menor = Math.min(num1, num2, num3);

        // Calcular a média
        const media = (num1 + num2 + num3) / 3;

        // Exibir os resultados
        document.getElementById("maior").textContent = maior;
        document.getElementById("menor").textContent = menor;
        document.getElementById("media").textContent = media.toFixed(2);
      }
    </script>
