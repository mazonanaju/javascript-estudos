Arquivo: index.html

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Maior, Menor e Média</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      input {
        margin-bottom: 10px;
      }
      #resultados {
        margin-top: 20px;
        font-size: 1.1em;
      }
    </style>
  </head>
  <body>
    <h1>Calcular Números</h1>

    <p>Digite três números para encontrar o maior, o menor e a média.</p>

    <label for="num1">Primeiro número:</label>
    <input type="number" id="num1" /><br />

    <label for="num2">Segundo número:</label>
    <input type="number" id="num2" /><br />

    <label for="num3">Terceiro número:</label>
    <input type="number" id="num3" /><br />

    <button onclick="calcular()">Calcular</button>

    <div id="resultados">
      <p id="maior"></p>
      <p id="menor"></p>
      <p id="media"></p>
    </div>

    <script>
      // O script JavaScript fica aqui, no final do corpo do HTML
      function calcular() {
        // Pega os valores dos inputs e converte para número
        const num1 = Number(document.getElementById("num1").value);
        const num2 = Number(document.getElementById("num2").value);
        const num3 = Number(document.getElementById("num3").value);

        // Valida se os valores são números válidos
        if (
          isNaN(num1) ||
          isNaN(num2) ||
          isNaN(num3) ||
          document.getElementById("num1").value === "" ||
          document.getElementById("num2").value === "" ||
          document.getElementById("num3").value === ""
        ) {
          alert("Por favor, preencha todos os campos com números válidos.");
          return;
        }

        // Encontra o maior número usando Math.max()
        const maior = Math.max(num1, num2, num3);
        document.getElementById(
          "maior"
        ).textContent = `O maior número é: ${maior}`;

        // Encontra o menor número usando Math.min()
        const menor = Math.min(num1, num2, num3);
        document.getElementById(
          "menor"
        ).textContent = `O menor número é: ${menor}`;

        // Calcula a média e formata com 2 casas decimais
        const media = (num1 + num2 + num3) / 3;
        document.getElementById(
          "media"
        ).textContent = `A média dos três números é: ${media.toFixed(2)}`;
      }
    </script>
  </body>
</html>
